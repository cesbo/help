---
import { LinkButton } from '@astrojs/starlight/components';

const { title, description, mainLink, links } = Astro.props;
---
<div class="flex flex-col border rounded-md p-4">
    <h3>
        <a href={mainLink}>{title}</a>
    </h3>
    <p>{description}</p>

    <div class="flex-1 mt-2 flex items-center gap-1">
        {Object.entries(links ?? {}).map(([link, text]) => (
            <LinkButton href={link} variant="secondary">{text}</LinkButton>
        ))}
    </div>
</div>
